<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.projeto2.controllers.LoginController"
            style="-fx-background-color: #f5f5f5; -fx-font-family: 'Arial';">

    <!-- Topo da tela (título ou logotipo da clínica) -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #4CAF50; -fx-padding: 20;">
            <Label text="Clínica de Fisioterapia"
                   style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Área principal do Login -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
            <!-- Logotipo da clínica -->
            <ImageView fx:id="logo" fitHeight="120" fitWidth="180" preserveRatio="true" />

            <!-- Formulário de Login -->
            <GridPane hgap="10" vgap="15" alignment="CENTER">
                <!-- Campo Nº Funcionário -->
                <Label text="Nº Funcionário:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                <TextField fx:id="usernameField" promptText="Insira o nº do funcionário"
                           style="-fx-text-fill: black; -fx-background-color: #ffffff;"
                           GridPane.columnIndex="1" />

                <!-- Campo Senha -->
                <Label text="Palavra-Passe:" style="-fx-font-size: 14px; -fx-text-fill: #333;" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" promptText="Insira sua senha"
                               style="-fx-text-fill: black; -fx-background-color: #ffffff;"
                               GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Botões de Login e Sair -->
                <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Button text="Login"
                            fx:id="loginButton"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
                            onAction="#handleLogin" />
                    <Button text="Sair"
                            fx:id="exitButton"
                            style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 14px;"
                            onAction="#handleExit" />
                </HBox>
            </GridPane>
        </VBox>
    </center>

    <!-- Rodapé -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #4CAF50; -fx-padding: 10;">
            <Label text="© 2023 Clínica de Fisioterapia - Todos os direitos reservados"
                   style="-fx-font-size: 12px; -fx-text-fill: white;" />
        </HBox>
    </bottom>

</BorderPane>