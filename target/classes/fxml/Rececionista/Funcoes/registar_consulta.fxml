<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.projeto2.controllers.Rececionista.RegistarConsultaController"
            prefWidth="500" prefHeight="600"
            style="-fx-background-color: #f9f9f9;">
    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="30" prefWidth="400" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <Label text="Registar Consulta" style="-fx-font-size: 22px; -fx-text-fill: #2ea5af; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="250" />
            </columnConstraints>

            <!-- Paciente -->
            <Label text="Paciente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="pacienteCombo" promptText="Selecionar paciente"
                      GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

            <!-- Funcionário -->
            <Label text="Funcionário:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="funcionarioCombo" promptText="Selecionar funcionário"
                      GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="220"/>

            <!-- Tipo Consulta -->
            <Label text="Tipo de Consulta:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="tipoConsultaCombo" promptText="Selecionar tipo"
                      GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="220"/>

            <!-- Data -->
            <Label text="Data:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dataPicker"
                        GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="220"/>

            <!-- Hora -->
            <Label text="Hora:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="horaField" promptText="HH:mm"
                       GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="220"/>
        </GridPane>

        <Button text="Submeter"
                onAction="#handleSubmeterConsulta"
                style="-fx-background-color: #2ea5af; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                prefWidth="150"/>
    </VBox>
</AnchorPane>
