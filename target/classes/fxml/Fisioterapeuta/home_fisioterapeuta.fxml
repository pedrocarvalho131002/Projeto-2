<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.projeto2.controllers.Fisioterapeuta.HomeFisioterapeutaController"
            style="-fx-font-family: 'Arial';"
            stylesheets="@../../styles/home.css">

    <!-- Topo com cabeçalho -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="10"
              prefHeight="60"
              style="-fx-background-color: #2ea5af; -fx-padding: 10;">
        </HBox>
    </top>

    <!-- Sidebar à esquerda -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #2ea5af; -fx-padding: 30;" alignment="TOP_CENTER">

            <!-- Logo no topo -->
            <ImageView fx:id="logo"
                       fitWidth="150"
                       preserveRatio="true" />

            <!-- Espaçador acima dos botões -->
            <Region prefHeight="30" />

            <!-- Botões -->
            <VBox spacing="25" alignment="TOP_CENTER">
                <Button text="Minhas consultas"
                        onAction="#handleMinhasConsultas"
                        styleClass="sidebar-button" />

                <Button text="Alterar Estado"
                        onAction="#handleAlterarEstado"
                        styleClass="sidebar-button" />

                <Button text="Terminar Sessão"
                        onAction="#handleLogout"
                        styleClass="logout-button" />
            </VBox>

            <!-- Espaçador abaixo dos botões -->
            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- Área central com mensagem -->
    <center>
        <VBox spacing="15" alignment="CENTER"
              style="-fx-padding: 50;">
            <Label text="Bem-vindo(a), Fisioterapeuta!"
                   style="-fx-text-fill: #2ea5af; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="Aqui você pode listar e alterar as suas consultas"
                   style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <Label text="Use o menu lateral para listar ou alterar consultas."
                   style="-fx-font-size: 12px; -fx-text-fill: #555;" />
        </VBox>
    </center>
</BorderPane>
