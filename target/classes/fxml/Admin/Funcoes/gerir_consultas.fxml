<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.projeto2.controllers.Admin.GerirConsultasController"
            style="-fx-background-color:#f9f9f9;">

    <!-- título -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding:10;">
            <Label text="Lista de Consultas"
                   style="-fx-font-size:22px;-fx-font-weight:bold;-fx-text-fill:#2ea5af;"/>
        </HBox>
    </top>

    <!-- tabela -->
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding:20;">
            <TableView fx:id="tabelaConsultas" prefWidth="800" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colIdConsulta"   text="ID"             prefWidth="60"/>
                    <TableColumn fx:id="colPaciente"     text="Paciente"       prefWidth="120"/>
                    <TableColumn fx:id="colFuncionario"  text="Funcionário"    prefWidth="120"/>
                    <TableColumn fx:id="colTipo"         text="Tipo Consulta"  prefWidth="120"/>
                    <TableColumn fx:id="colData"         text="Data"           prefWidth="100"/>
                    <TableColumn fx:id="colHora"         text="Hora"           prefWidth="80"/>
                    <TableColumn fx:id="colEstado"       text="Estado"         prefWidth="120"/>
                </columns>
            </TableView>

            <!-- barra de botões -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Atualizar lista"        onAction="#handleAtualizar"/>
                <Button text="Editar / Eliminar"      onAction="#handleEditarEliminar"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
