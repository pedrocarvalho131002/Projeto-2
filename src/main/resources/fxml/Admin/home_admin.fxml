<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.projeto2.controllers.Admin.HomeAdminController"
            style="-fx-font-family: 'Arial';"
            stylesheets="@../../styles/home.css">

    <!-- Topo com cabeçalho -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="10"
              prefHeight="60"
              style="-fx-background-color: #2ea5af; -fx-padding: 10;">
        </HBox>
    </top>

    <!-- Barra lateral -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: #2ea5af; -fx-padding: 30;">

            <!-- Logo topo -->
            <ImageView fx:id="logo"
                       fitWidth="150"
                       preserveRatio="true" />

            <!-- Pequeno espaçador acima dos botões -->
            <Region prefHeight="30" />

            <!-- Botões -->
            <VBox spacing="25" alignment="TOP_CENTER">
                <Button text="Gerir Funcionários"
                        onAction="#handleGerirFuncionarios"
                        styleClass="sidebar-button" />

                <Button text="Gerir Consultas"
                        onAction="#handleGerirConsultas"
                        styleClass="sidebar-button" />

                <Button text="Ver Estatísticas"
                        onAction="#handleVerEstatisticas"
                        styleClass="sidebar-button" />

                <Button text="Terminar Sessão"
                        onAction="#handleLogout"
                        styleClass="logout-button" />
            </VBox>

            <!-- Espaçador abaixo dos botões -->
            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- Área central -->
    <center>
        <VBox spacing="15" alignment="CENTER"
              style="-fx-padding: 50;">
            <Label text="Bem-vindo(a), Administrador!"
                   style="-fx-text-fill: #2ea5af; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="Gerencie os recursos da clínica com eficiência."
                   style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <Label text="Use o menu lateral para gerir funcionários, consultas e consultar estatísticas."
                   style="-fx-font-size: 12px; -fx-text-fill: #555;" />
        </VBox>
    </center>
</BorderPane>
